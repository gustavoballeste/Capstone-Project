<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/grid_padding"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/widget_category_image_view"
            android:layout_width="@dimen/grid_image_size"
            android:layout_height="@dimen/grid_image_size"
            android:layout_gravity="center">
        </ImageView>

        <TextView
            android:id="@+id/widget_category_description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/grid_text_margin_top"
            android:textSize="@dimen/grid_text_size"
            android:layout_gravity="center"
            android:textColor="@color/colorWhite">
        </TextView>

    </LinearLayout>
</android.support.v7.widget.CardView>
