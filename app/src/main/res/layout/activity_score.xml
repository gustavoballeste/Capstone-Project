<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    tools:context=".QuestionActivity">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:layout_margin="16dp"
        android:layout_marginBottom="16dp"
        android:text="TRIVIA"
        android:gravity="center_horizontal" />
    <TextView
        android:id="@+id/score_category_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal" />
    <TextView
        android:id="@+id/round_score_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="32dp"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="Total score"
        android:gravity="center_horizontal" />
    <TextView
        android:id="@+id/total_score_text_view"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:textSize="32dp"
        android:layout_margin="8dp"
        android:background="@drawable/circle_text_view"
        android:textColor="@color/colorWhite"
        android:gravity="center"/>
    <Button
        android:id="@+id/start_again"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="START AGAIN"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="start again">
    </Button>
    <Button
        android:id="@+id/choose_category"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="CHOOSE CATEGORY"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"
        android:contentDescription="choose another category">
    </Button>

</LinearLayout>