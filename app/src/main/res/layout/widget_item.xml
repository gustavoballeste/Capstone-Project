<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/grid_padding"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/widget_item_image"
        android:layout_width="@dimen/widget_image_size"
        android:layout_height="@dimen/widget_image_size"
        android:layout_gravity="center">
    </ImageView>

    <TextView
        android:id="@+id/widget_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_text_margin_top"
        android:textSize="@dimen/grid_text_size"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite">
    </TextView>

</LinearLayout>
